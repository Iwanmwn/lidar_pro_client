<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>

<GridPane fx:controller="com.lidar_pro.main.GUI.MainActivity.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="15" vgap="5">
    <padding><Insets top ="15" right="15" left="15" bottom="15" /></padding>

    <!-- TODO: set Font to Tahoma -->
    <!-- TODO: set FontWeight to NORMAL and 20 -->
    <Text fx:id="sceneTitle1"
          text="Absorption Spectre"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.fillHeight="2" GridPane.fillWidth="1"
    />
    <Label fx:id="wavelength_label"
           text="Wavelength:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
    />
    <TextField fx:id="wav_tField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
    />
    <Label fx:id="step_label"
           text="Step:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
    />
    <TextField fx:id="step_tField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
    />
    <Button fx:id="genAbs_btn"
            text="Generate"
            GridPane.columnIndex="1" GridPane.rowIndex="3"
            GridPane.halignment="RIGHT"
    />
    <Button fx:id="showAbsText_btn"
            text="Show Text"
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            GridPane.halignment="RIGHT"
    />
    <Label fx:id="offWav_cm_label"
           text="Wavelength Off (cm-1):"
           GridPane.columnIndex="0" GridPane.rowIndex="6"
    />
    <TextField fx:id="offWav_cm_tField"
               text=""
               GridPane.columnIndex="1" GridPane.rowIndex="6"
    />
    <Label fx:id="onWav_cm_label"
           text="Wavelength On (cm-1):"
           GridPane.columnIndex="0" GridPane.rowIndex="7"
    />
    <TextField fx:id="onWav_cm_tField"
               text=""
               GridPane.columnIndex="1" GridPane.rowIndex="7"
    />
    <Button fx:id="showAbsPlot_btn"
            text="Show Plot"
            GridPane.columnIndex="1" GridPane.rowIndex="8"
            GridPane.halignment="RIGHT"
    />

    <Text fx:id="sceneTitle2"
          text="Signal-to-Noise Ratio"
          GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.fillHeight="2" GridPane.fillWidth="1"
    />
    <Label fx:id="soundTechnique_label"
           text="Sounding technique:"
           GridPane.columnIndex="0" GridPane.rowIndex="11"
    />
    <RadioButton fx:id="DIALTechnique_RBtn"
                 text="DIAL"
                 GridPane.columnIndex="1" GridPane.rowIndex="11"
                 GridPane.halignment="RIGHT"
    />
    <RadioButton fx:id="IPDATechnique_RBtn"
                 text="IPDA"
                 GridPane.columnIndex="1" GridPane.rowIndex="12"
                 GridPane.halignment="RIGHT"
    />
    <Label fx:id="soundDistance_label"
           text="Sounding distance (km):"
           GridPane.columnIndex="0" GridPane.rowIndex="13"
    />
    <TextField fx:id="soundDistance_tField"
               text=""
               GridPane.columnIndex="1" GridPane.rowIndex="13"
    />
    <Label fx:id="offWav_mkm_label"
           text="Wavelength Off (μm):"
           GridPane.columnIndex="0" GridPane.rowIndex="14"
    />
    <TextField fx:id="offWav_mkm_tField"
               text=""
               GridPane.columnIndex="1" GridPane.rowIndex="14"
    />
    <Label fx:id="onWav_mkm_label"
           text="Wavelength On (μm):"
           GridPane.columnIndex="0" GridPane.rowIndex="15"
    />
    <TextField fx:id="onWav_mkm_tField"
               text=""
               GridPane.columnIndex="1" GridPane.rowIndex="15"
    />
    <Button fx:id="genSNR_btn"
            text="Generate"
            GridPane.columnIndex="1" GridPane.rowIndex="16"
            GridPane.halignment="RIGHT"
    />
    <Button fx:id="showSNRText_btn"
            text="Show Text"
            GridPane.columnIndex="1" GridPane.rowIndex="17"
            GridPane.halignment="RIGHT"
    />
    <Button fx:id="showSNRPlot_btn"
            text="Show Plot"
            GridPane.columnIndex="1" GridPane.rowIndex="18"
            GridPane.halignment="RIGHT"
    />

    <Text fx:id="sceneTitle3"
          text="Generated File"
          GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.fillHeight="2" GridPane.fillWidth="1"
    />
    <TextArea fx:id="textArea"
              text=""
              prefWidth="250"
              GridPane.columnIndex="2" GridPane.rowIndex="1"
              GridPane.columnSpan="1" GridPane.rowSpan="17"
    />
    <Label fx:id="molecSpectre_label"
           text=""
           GridPane.columnIndex="2" GridPane.rowIndex="18"
           GridPane.columnSpan="1" GridPane.rowSpan="1"
    />
    <Button fx:id="tAreaClear_btn"
            text="Clear"
            GridPane.columnIndex="2" GridPane.rowIndex="18"
            GridPane.halignment="RIGHT"
    />

</GridPane>
















